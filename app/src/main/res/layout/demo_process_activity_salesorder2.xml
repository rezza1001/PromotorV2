<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_standard" android:id="@+id/incl_header_00"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/incl_header_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <LinearLayout
                android:id="@+id/lnly_info_00"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.wadaro.promotor.util.MySpinnerView
                android:id="@+id/spnr_jp_00"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.wadaro.promotor.util.FormEditext
                android:id="@+id/edtx_fullname_00"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.wadaro.promotor.util.MySpinnerView
                android:id="@+id/spnr_product_00"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.wadaro.promotor.util.MySpinnerView
                android:id="@+id/spnr_qty_00"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.wadaro.promotor.util.FormEditext
                android:id="@+id/edtx_identity_00"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/lnly_ktp_00"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#de000000"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto KTP" />

                <RelativeLayout
                    android:id="@+id/rvly_coordinator_00"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/backround_photo"
                    android:layout_width="200dp"
                    android:layout_height="130dp">
                    <ImageView
                        android:id="@+id/imvw_icon_01"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_cloud_upload"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:text="Upload Foto"
                        android:layout_below="@id/imvw_icon_01"
                        android:layout_centerHorizontal="true"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imvw_coordinator_00"
                        app:riv_corner_radius="5dp"
                        android:layout_margin="2dp"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txvw_addorder_00"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="Tambah Order"
                    android:gravity="center"
                    android:textColor="#1476cf"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:background="@drawable/button_line"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/txvw_addjp_00"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="Tambah JP"
                    android:gravity="center"
                    android:textColor="#1476cf"
                    android:textStyle="bold"
                    android:background="@drawable/button_line"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="#ffecc3"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:text="Pemesan"
                            android:gravity="center"
                            android:textColor="#804838"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="131dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Barang"
                            android:gravity="center"
                            android:textColor="#804838"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="141dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="QTY"
                            android:gravity="center"
                            android:textColor="#804838"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_width="71dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Harga"
                            android:gravity="center"
                            android:textColor="#804838"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_width="111dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Sub Total"
                            android:gravity="center"
                            android:textColor="#804838"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_width="111dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvw_product_00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:background="#ffecc3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:weightSum="2.1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Button
                    android:id="@+id/bbtn_save_00"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Simpan"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/ripple_btn"/>
                <View
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <Button
                    android:id="@+id/bbtn_cancel_00"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="BATAL"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/ripple_btn_cancel"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
