<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_standard" android:id="@+id/incl_header_00"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/incl_header_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <LinearLayout
                android:id="@+id/lnly_info_00"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="#ffecc3"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:text="Pemesan"
                            android:gravity="center"
                            android:textColor="#804838"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="131dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Barang"
                            android:gravity="center"
                            android:textColor="#804838"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_width="141dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="QTY"
                            android:gravity="center"
                            android:textColor="#804838"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_width="71dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Harga"
                            android:gravity="center"
                            android:textColor="#804838"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_width="111dp"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:text="Sub Total"
                            android:gravity="center"
                            android:textColor="#804838"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_width="111dp"
                            android:layout_height="match_parent"/>
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvw_product_00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:background="#ffecc3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bbtn_finsih_00"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="Selesai Order"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/ripple_btn"
                    android:layout_marginTop="15dp"/>
                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp"/>
                <Button
                    android:id="@+id/bbtn_edit_00"
                    android:text="Edit SO"
                    android:textAllCaps="false"
                    android:background="@drawable/ripple_btn_cancel"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
