<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_for_form">

        <TextView
            android:id="@+id/txvw_key_00"
            android:textSize="14sp"
            android:textColor="#de000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Kordinator"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/txvw_mandatory_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="@color/required_color"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/txvw_key_00"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtx_data_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#de000000"
            android:background="@drawable/shape_ev"
            android:paddingRight="8dp"
            android:paddingLeft="8dp" />
        <View
            android:id="@+id/view_block_00"
            android:clickable="true"
            android:layout_alignTop="@+id/edtx_data_00"
            android:layout_alignBottom="@+id/edtx_data_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>
