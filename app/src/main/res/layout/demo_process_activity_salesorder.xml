<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_standard" android:id="@+id/incl_header_00"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/incl_header_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <LinearLayout
                android:id="@+id/lnly_info_00"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bbtn_edit_00"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:text="Edit Koordinator"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/ripple_btn"
                    android:layout_marginTop="15dp"/>
            </LinearLayout>
            <View
                android:background="#868f99"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <com.wadaro.promotor.util.FormEditext
                android:id="@+id/edtx_note_00"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:weightSum="2.1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Button
                    android:id="@+id/bbtn_save_00"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Simpan"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/ripple_btn"/>
                <View
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <Button
                    android:id="@+id/bbtn_cancel_00"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="BATAL"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/ripple_btn_cancel"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
