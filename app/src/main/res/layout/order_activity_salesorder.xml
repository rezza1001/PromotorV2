<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_standard" android:id="@+id/incl_header_00"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/incl_header_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">
                <LinearLayout
                    android:id="@+id/lnly_data_00"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="#00A4F9"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="40dp">
                            <TextView
                                android:text="Pemesan"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:layout_width="131dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:text="Barang"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:layout_width="141dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:text="QTY"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_width="71dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:text="Harga"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:layout_width="111dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcvw_product_00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <View
                            android:background="#00A4F9"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>